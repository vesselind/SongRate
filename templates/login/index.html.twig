{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    {{ include('inc/guest-header.html.twig') }}


    <section class="d-flex justify-content-center">
        <div class="bg-dark col-12 col-sm-10 col-md-6 col-lg-4 p-4">
            {% for message in app.flashes('notice') %}
            <div class="alert alert-success my-3">
                {{ message }}
            </div>
            {% endfor %}

            <form action="{{ path('login') }}" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Email:</label>
                    <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}"/>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" id="password" name="_password" class="form-control"/>
                </div>

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"/> #}
                <div class="mb-2 d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>

                <div class="my-3 small text-uppercase">Don't have an account?</div>
                <div class="mb-2 d-grid gap-2">
                    <a href="{{ path('app_register') }}" class="btn btn-info">Register</a>
                </div>
            </form>

            
        </div>
    </section>
{% endblock %}